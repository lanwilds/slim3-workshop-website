  <div class="row row-margin-bottom">
            {% for work in workshop %}
            <div class="col-md-5 no-padding lib-item" data-category="view">
                <div class="lib-panel">
                    <div class="row box-shadow">
                        <div class="col-md-6">
                            <img class="lib-img-show" src="{{work.banner}}">
                        </div>
                        <div class="col-md-6">
                            <div class="lib-row lib-header">
                                {{work.wid}}: {{work.title}}
                                <div class="lib-header-seperator"></div>
                            </div>
                            <div class="lib-row lib-desc">
                                {{work.description}}
                            </div>
                        </div>
                        {% set foo = '' %}
                        {% for id in wids %}
                        {% if id == work.wid  %}
                        {% set foo = 'bar' %}
                        <button class="btn btn-success">You've Already Enrolled!</button>
                        {% endif %}
                        {% endfor %}
                        {% if foo != 'bar' %}
                        <a href="{{ path_for('home.enroll', {'workshop':work.wid }) }}" class="btn btn-default" id="btn"><i class="fa fa-user"></i> {{foo}}Enroll Now</a>
                        {% endif %}
                        <div class="btn-group">
                        <button type="button" class="btn btn-round btn-success">Date: {{work.date}}</button>
                        <button type="button" class="btn btn-primary">Added On {{work.created_at|date('d/m/y')}}</button>
                        <button type="button" class="btn btn-round btn-warning">Expiry: {{work.expiry}}</button>
                        </div>
                        <p class="btn btn-primary btn-block" style="margin:5px;">{{work.conductor}}</p>
                    </div>

                </div>
            </div>
            <div class="col-md-1"></div>
            {% endfor %}
        </div>
        {% if pages %}
        <ul class="pagination pagination-lg">
                {% for i in 1..pages %}
               <li {% if r == i %} class="active" {% endif %}><a href="{{ path_for('home.page', {'page':i }) }}">{{i}}</a></li>
                {% endfor %}
        </ul>
        {% endif %}
