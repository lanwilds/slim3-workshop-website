{% extends 'app.twig' %}

{% block content %}
<div class="row">

	<div class="col-md-6">

		<div class="panel panel-default">

			<div class="panel-heading">Sign Up</div>

				<div class="panel-body">
				
				<form action="{{ path_for('auth.post.signup') }}" method="post">
					<div class="form-group {{ errors.firstname ? ' has-error' : '' }}">
						<lable for="firstname">firstname</lable>
						<input type="text" id="firstname" name="firstname" placeholder="Enter firstname" class="form-control" value="{{ old.firstname }}">
						{% if errors.firstname %}
							<span class="help-block">{{ errors.firstname | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.lastname ? ' has-error' : '' }}">
						<lable for="lastname">lastname</lable>
						<input type="text" id="lastname" name="lastname" placeholder="Enter Lastname" class="form-control" value="{{ old.lastname }}">
						{% if errors.lastname %}
							<span class="help-block">{{ errors.lastname | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.email ? ' has-error' : '' }}">
						<lable for="email">Email</lable>
						<input type="email" id="email" name="email" placeholder="Enter email" class="form-control" value="{{ old.email }}">
						{% if errors.email %}
							<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.contact ? ' has-error' : '' }}">
						<lable for="contact">Contact</lable>
						<input type="text" id="contact" name="contact" placeholder="Enter Phone Number" class="form-control" value="{{ old.contact }}">
						{% if errors.contact %}
							<span class="help-block">{{ errors.contact | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.city ? ' has-error' : '' }}">
						<lable for="city">city</lable>
						<input type="text" id="city" name="city" placeholder="Enter City" class="form-control" value="{{ old.city }}">
						{% if errors.city %}
							<span class="help-block">{{ errors.city | first }}</span>
						{% endif %}
					</div>
					<div class="form-group {{ errors.state ? ' has-error' : '' }}">
						<lable for="state">state</lable>
						<input type="text" id="state" name="state" placeholder="Enter state" class="form-control" value="{{ old.state }}">
						{% if errors.state %}
							<span class="help-block">{{ errors.state | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.qualification ? ' has-error' : '' }}">
						<lable for="qualification">Qualification</lable>
						<textarea id="qualification" name="qualification" placeholder="qualification here" class="form-control">{{ old.qualification }}</textarea> 
						{% if errors.qualification %}
							<span class="help-block">{{ errors.qualification | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
						<lable for="password">Password</lable>
						<input type="password" id="password" name="password" class="form-control" >
						{% if errors.password %}
							<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{ errors.repassword ? ' has-error' : '' }}">
						<lable for="repassword">RePassword</lable>
						<input type="password" id="repassword" name="repassword" class="form-control" >
						{% if errors.repassword %}
							<span class="help-block">{{ errors.repassword | first }}</span>
						{% endif %}
					</div>
				<button type="submit" class="btn btn-default">Submit</button>

				{{ csrf.field | raw }}
				</form>
				</div>

			</div>

		</div>
	</div>
</div>

{% endblock %}